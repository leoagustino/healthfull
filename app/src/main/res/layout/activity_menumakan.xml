<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dasar"
    android:id="@+id/drawer_layout"
    tools:context=".menumakan">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/hijau"
                />
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:id="@+id/nav_view"
        android:background="@color/hijau"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_layout"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="389dp"
            android:layout_height="250dp"
            android:layout_marginTop="100dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_editor_absoluteY="100dp">
            <Button
                android:id="@+id/tambahmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft= "280dp"
                android:backgroundTint="@color/hijau"
                android:text="+Menu" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/calories_le"
                    android:layout_width="82dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="top"
                    android:text="@string/calories_le"
                    android:textAppearance="@style/calories_le" />

                <TextView
                    android:id="@+id/kcal"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:gravity="top"
                    android:text="@string/kcal"
                    android:textAppearance="@style/kcal" />

            </LinearLayout>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/activiy_main_piechart"
                android:layout_width="129dp"
                android:layout_height="120dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/report"
                android:layout_width="82dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="5dp"
                android:gravity="top"
                android:text="REPORT"
                android:textColor="@color/merah"
                android:textStyle="bold"
                android:textAppearance="@style/calories_le" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/consu"
                    android:layout_width="90dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Consumtion"
                    android:textAppearance="@style/calories_le"
                    tools:layout_editor_absoluteX="83dp"
                    tools:layout_editor_absoluteY="118dp" />

                <TextView
                    android:id="@+id/consunumt"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:gravity="top"
                    android:text="700 Kcal"
                    android:textAppearance="@style/kcal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <ProgressBar
                    style="?android:progressBarStyleHorizontal"
                    android:layout_width="38dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="7dp"
                    android:progress="80"
                    android:progressDrawable="@drawable/circleprogress" />

                <ProgressBar
                    style="?android:progressBarStyleHorizontal"
                    android:layout_width="38dp"
                    android:layout_height="43dp"
                    android:layout_marginBottom="10dp"
                    android:progress="80"
                    android:progressDrawable="@drawable/circleprogress" />

                <ProgressBar
                    style="?android:progressBarStyleHorizontal"
                    android:layout_width="38dp"
                    android:layout_height="43dp"
                    android:progress="80"
                    android:progressDrawable="@drawable/circleprogress" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pro"
                    android:layout_width="82dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:gravity="top"
                    android:text="Protein"
                    android:textAlignment="center"
                    android:textAppearance="@style/calories_le" />

                <TextView
                    android:id="@+id/consunum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:text="70 gr"
                    android:textAlignment="center"
                    android:textAppearance="@style/gr" />

                <TextView
                    android:id="@+id/carbo"
                    android:layout_width="82dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="17dp"
                    android:gravity="top"
                    android:text="Carbs"
                    android:textAlignment="center"
                    android:textAppearance="@style/calories_le" />

                <TextView
                    android:id="@+id/carbsgr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:text="70 gr"
                    android:textAlignment="center"
                    android:textAppearance="@style/gr" />

                <TextView
                    android:id="@+id/fat"
                    android:layout_width="82dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:gravity="top"
                    android:text="Fat"
                    android:textAlignment="center"
                    android:textAppearance="@style/calories_le" />

                <TextView
                    android:id="@+id/fatgr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:text="70 gr"
                    android:textAlignment="center"
                    android:textAppearance="@style/gr" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="396dp"
            android:layout_height="44dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="7dp"
            android:backgroundTint="@color/card"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view"
            app:layout_editor_absoluteY="300dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/makan_pagi"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:text="Makan Pagi : "
                    android:textAppearance="@style/makan_pagi"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/angka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:text="0"
                    android:textAppearance="@style/makan_pagi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/plus1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_plusbutton"
                    tools:layout_editor_absoluteX="297dp"
                    tools:layout_editor_absoluteY="439dp" />

                <ImageButton
                    android:id="@+id/lonceng1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_bell"
                    tools:layout_editor_absoluteX="229dp"
                    tools:layout_editor_absoluteY="439dp"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="396dp"
            android:layout_height="44dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="7dp"
            android:backgroundTint="@color/card"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view1"
            app:layout_editor_absoluteY="100dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/makan_siang"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:text="Makan Siang : "
                    android:textAppearance="@style/makan_pagi"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/angka1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:text="0"
                    android:textAppearance="@style/makan_pagi" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/plus2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_plusbutton"
                    tools:layout_editor_absoluteX="297dp"
                    tools:layout_editor_absoluteY="439dp" />

                <ImageButton
                    android:id="@+id/lonceng3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_bell"
                    tools:layout_editor_absoluteX="229dp"
                    tools:layout_editor_absoluteY="439dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="396dp"
            android:layout_height="44dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="7dp"
            android:backgroundTint="@color/card"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/makan_malam"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:text="Makan Malam : "
                    android:textAppearance="@style/makan_pagi" />

                <TextView
                    android:id="@+id/angka2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:text="0"
                    android:textAppearance="@style/makan_pagi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/plus3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_plusbutton"
                    tools:layout_editor_absoluteX="297dp"
                    tools:layout_editor_absoluteY="439dp" />

                <ImageButton
                    android:id="@+id/lonceng4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_bell"
                    tools:layout_editor_absoluteX="229dp"
                    tools:layout_editor_absoluteY="439dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="396dp"
            android:layout_height="44dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="7dp"
            android:backgroundTint="@color/card"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/minum"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:text="Minum : "
                    android:textAppearance="@style/makan_pagi" />

                <TextView
                    android:id="@+id/angka3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:text="0"
                    android:textAppearance="@style/makan_pagi" />

                <TextView
                    android:id="@+id/mili"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:text="ml"
                    android:textAppearance="@style/makan_pagi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/plus4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_plusbutton"
                    tools:layout_editor_absoluteX="297dp"
                    tools:layout_editor_absoluteY="439dp" />

                <ImageButton
                    android:id="@+id/lonceng2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_bell"
                    tools:layout_editor_absoluteX="229dp"
                    tools:layout_editor_absoluteY="439dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>
